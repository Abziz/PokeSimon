<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    tools:context="com.example.abziz.simon.GameActivity">
    <LinearLayout
        android:layout_weight="11"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/score_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:text="Score:"
            android:textSize="50dp"/>
        <TextView
            android:id="@+id/score_val"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:text="0"
            android:textSize="50sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_weight="5"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
        android:orientation="horizontal"
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:padding="5dp"
            android:gravity="bottom|right"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!--bulbasaur-->
            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/bulbasaur"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/rounded_bulbasaur"
                android:scaleX="1"
                android:scaleY="1"
                android:scaleType="center"
                android:src="@drawable/bulbasaur_idle"/>
        </LinearLayout>
        <LinearLayout
            android:padding="5dp"
            android:gravity="bottom|left"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!--charmander-->
            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/charmander"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/rounded_charmander"
                android:scaleType="center"
                android:scaleX="1"
                android:scaleY="1"
                android:src="@drawable/charmander_idle" />
        </LinearLayout>
    </LinearLayout>

        <LinearLayout
        android:orientation="horizontal"
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:padding="5dp"
            android:gravity="top|right"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!--squirtle-->
            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/squirtle"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/rounded_squirtle"
                android:scaleType="center"
                android:scaleX="1"
                android:scaleY="1"
                android:src="@drawable/squirtle_idle"/>

        </LinearLayout>
        <LinearLayout
            android:padding="5dp"
            android:gravity="top|left"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!--pikachu-->
            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/pikachu"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/rounded_pikachu"
                android:scaleX="1"
                android:scaleY="1"
                android:scaleType="center"
                android:src="@drawable/pikachu_idle"/>
        </LinearLayout>

    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:padding="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_weight="9"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/left_karp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scaleX="2"
                android:scaleY="2"
                android:translationY="-20dp"
                android:scaleType="fitCenter"
                android:src="@drawable/magikarp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:paddingBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:gravity="center|bottom"
                android:fontFamily="casual"
                android:textSize="20dp"
                android:text="GameOver"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/right_karp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scaleX="2"
                android:scaleY="2"
                android:translationY="-20dp"
                android:scaleType="fitCenter"
                android:src="@drawable/magikarp"/>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
