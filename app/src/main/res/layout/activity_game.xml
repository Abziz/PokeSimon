<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    tools:context="com.example.abziz.simon.GameActivity">


    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/pikachu"
        android:layout_width="135dp"
        android:layout_height="170dp"
        android:background="@drawable/rounded_pikachu"
        android:scaleX="1"
        android:scaleY="1"
        android:scaleType="center"

        android:src="@drawable/pikachu_idle"
        app:layout_constraintTop_toTopOf="@+id/guideline2"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/bulbasaur"
        android:layout_width="135dp"
        android:layout_height="170dp"
        android:background="@drawable/rounded_bulbasaur"
        android:scaleX="1"
        android:scaleY="1"
        android:scaleType="center"

        android:src="@drawable/bulbasaur_idle"
        app:layout_constraintRight_toLeftOf="@+id/guideline"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline2" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/charmander"
        android:layout_width="135dp"
        android:layout_height="170dp"
        android:scaleType="center"

        android:background="@drawable/rounded_charmander"
        android:scaleX="1"
        android:scaleY="1"
        android:src="@drawable/charmander_idle"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline2" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/squirtle"
        android:layout_width="135dp"
        android:layout_height="170dp"
        android:background="@drawable/rounded_squirtle"
        android:scaleType="center"
        android:scaleX="1"
        android:scaleY="1"
        android:src="@drawable/squirtle_idle"
        app:layout_constraintRight_toLeftOf="@+id/guideline"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toTopOf="@+id/guideline2"
        android:layout_marginTop="8dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="180dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="322dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="124dp" />

    <TextView
        android:id="@+id/score_text"
        android:layout_width="140dp"
        android:layout_height="70dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="63dp"
        android:layout_marginTop="8dp"
        android:fontFamily="casual"
        android:text="Score:"
        android:textSize="50dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/score_val"
        android:layout_width="130dp"
        android:layout_height="70dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="casual"
        android:text="0"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline3"
        app:layout_constraintLeft_toRightOf="@+id/score_text"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>
